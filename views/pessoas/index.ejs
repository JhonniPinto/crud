<% include ../partials/header.ejs %>

<h1>Pessoas</h1>
<p><a href="/pessoas/create">Nova pessoa</a></p>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Nome</th>
        <th>Cargo</th>
        <th>Ações</th>
    </tr>
    <% pessoas.forEach(pessoa => { %>
    <tr>
        <td><%- pessoa.nome %></td>
        <td><%- pessoa.cargo %></td>
        <td>
            <a class="btn btn-primary" href="/pessoas/update/<%- pessoa.id %>" role="button">Editar</a>
            <a class="btn btn-primary" href="/pessoas/delete/<%- pessoa.id %>" role="button">Excluir</a>
        </td>
    </tr>
    <% }) %>
</table>

<% include ../partials/footer.ejs %>
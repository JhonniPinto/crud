<% include ../partials/header.ejs %>

<h1>Pessoas</h1>
<p><a href="/pessoas">Voltar para a lista de pessoas</a></p>

<form method="POST">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" placeholder="Digite o nome" name="nome" value="<%- pessoa.nome %>">
    </div>
    <div class="form-group">
        <label for="nascimento">Data de nascimento:</label>
        <input type="text" class="form-control" id="nascimento" placeholder="Digite a data de nascimento (aaaa-mm-dd)" name="nascimento" value="<%- pessoa.nascimento %>">
    </div>
    <div class="form-group">
        <label for="cargo">Cargo:</label>
        <input type="text" class="form-control" id="cargo" placeholder="Digite o cargo" name="cargo" value="<%- pessoa.cargo %>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<% include ../partials/footer.ejs %>